@model IEnumerable<BookItt.Models.Order>

@{
    ViewBag.Title = "Search";
}

<h2>Search Result</h2>


<a type="button" class="btn btn-sm btn-primary" href="@Url.Action("OrderHistory", "Orders")">
    <span class="glyphicon glyphicon-arrow-left"></span>
    <span>Back</span>
</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerEmail)
            </td>
            <td>
                @if (item.Status != "Shipped")
                {
                    @Html.ActionLink("Details", "Details2", new { id = item.OrderID })
                    <a>|</a>
                    @Html.ActionLink("Delete Order", "Delete", new { id = item.OrderID })

                }
                @if (item.Status == "Shipped")
                {
                    @Html.ActionLink("Details", "Details2", new { id = item.OrderID })
                }
            </td>
        </tr>
    }

</table>